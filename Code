# ----------------------------
# ITGC Simulation Program
# ----------------------------

# 1Ô∏è‚É£ ACCESS CONTROL DATA
users = [
    {"name": "Admin1", "role": "admin", "active": True},
    {"name": "Dev1", "role": "developer", "active": True},
    {"name": "ExEmployee", "role": "developer", "active": False}
]

# 2Ô∏è‚É£ CHANGE MANAGEMENT DATA
change_requests = [
    {"change_id": 101, "approved": True, "tested": True},
    {"change_id": 102, "approved": False, "tested": True},
    {"change_id": 103, "approved": True, "tested": False}
]

# 3Ô∏è‚É£ BACKUP LOGS
backups = {
    "last_backup_days_ago": 2,
    "backup_successful": True
}


# ----------------------------
# ITGC CHECK FUNCTIONS
# ----------------------------

def check_access_controls():
    print("üîç Checking Access Controls...")
    for user in users:
        if user["active"] == False:
            print(f"‚ö†Ô∏è Inactive user found: {user['name']}")
    print("Access control review completed.\n")


def check_change_management():
    print("üîç Checking Change Management...")
    for change in change_requests:
        if not change["approved"]:
            print(f"‚ö†Ô∏è Change {change['change_id']} not approved!")
        if not change["tested"]:
            print(f"‚ö†Ô∏è Change {change['change_id']} not tested!")
    print("Change management review completed.\n")


def check_backup_controls():
    print("üîç Checking Backup Controls...")
    if backups["last_backup_days_ago"] > 1:
        print("‚ö†Ô∏è Backup not recent!")
    if not backups["backup_successful"]:
        print("‚ö†Ô∏è Backup failed!")
    print("Backup review completed.\n")


# ----------------------------
# RUN ITGC REVIEW
# ----------------------------

print("===== ITGC REVIEW STARTED =====\n")

check_access_controls()
check_change_management()
check_backup_controls()

print("===== ITGC REVIEW COMPLETED =====")
